<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:layout_margin="10dp"
	 android:stretchColumns="1" 
	 android:background="#820000"> 
	 <TableRow 
	     android:layout_height="60dp"
	     android:background="#e6e6e6"
	     android:layout_marginTop="3dp" >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="当前用户"/>
	     <TextView  android:id="@+id/useracc"
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="15dp"
	         android:paddingBottom="15dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646"
	         android:text="默认用户"/>
	 </TableRow> 
	 <TableRow 
	     android:layout_height="fill_parent"
	     android:background="#e6e6e6"  >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="系统用户个数"/>
	     <TextView  android:id="@+id/countuser"
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646" 
	         android:text="1个" />
	 </TableRow>
	 <TableRow 
	     android:layout_height="fill_parent"
	     android:background="#e6e6e6"  >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="支出记录"/>
	     <TextView  android:id="@+id/countpay"
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646" 
	         android:text="0条" />
	 </TableRow>
	 <TableRow 
	     android:layout_height="fill_parent"
	     android:background="#e6e6e6"  >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="收入记录"/>
	     <TextView  android:id="@+id/countincome"
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646" 
	         android:text="0条" />
	 </TableRow>
	 <TableRow 
	     android:layout_height="fill_parent"
	     android:background="#e6e6e6"  >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="便签记录"/>
	     <TextView  android:id="@+id/countnote"
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646" 
	         android:text="0条" />
	 </TableRow>
	 <TableRow 
	     android:layout_height="fill_parent"
	     android:background="#e6e6e6"
	     android:layout_marginBottom="2dp"
	     android:id="@+id/description" >
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="系统使用说明书"/>
	     <TextView  
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646"
			 android:drawableRight="@drawable/hint"/>
	 </TableRow>
	 <TableRow 
	     android:layout_height="60dp"
	     android:background="#e6e6e6" 
	     android:id="@+id/author">
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="作者信息"/>
	     <TextView  
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="9dp"
	         android:paddingBottom="13dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646"
			 android:drawableRight="@drawable/hint"/>
	 </TableRow> 
	 <TableRow 
	     android:layout_height="60dp"
	     android:background="#e6e6e6" 
         android:layout_marginBottom="3dp">
	     <TextView android:layout_height="match_parent"
	         android:layout_marginLeft="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="13dp"
	         android:paddingBottom="13dp"
	         android:paddingLeft="15dp"
	         android:background="#ffffff"
	         android:textColor="#500000"
	         android:textSize="16sp"
	         android:text="系统版本"/>
	     <TextView  
	         android:layout_height="match_parent"
	         android:layout_marginRight="1dp"
	         android:layout_marginBottom="1dp"
	         android:paddingTop="15dp"
	         android:paddingBottom="15dp"
	         android:paddingRight="15dp" 
	         android:gravity="right"
	         android:background="#ffffff"
	         android:textSize="14sp"
	         android:textColor="#464646"
	         android:text="1.0.0.1"/>
	 </TableRow> 
</TableLayout>
